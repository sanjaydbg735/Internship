<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Tapestry&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Libre+Bodoni&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="StudentLogin.css">
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <title>Student-Login</title>
</head>
<style>
    *{
    padding: 0px;
    margin: 0px;
}

#background{
    background: url('https://www.tsunagulocal.com/wp-content/uploads/2021/05/internship-title-image-p24804776-2000x1302-1.jpg');
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center center;
    width: 100vw;
    height: 50rem;
    opacity: 0.8;
}

#loginblock {
    width: 35vw;
    position: absolute;
    background-color: white;
    opacity: 0.92;
    top: 12vh;
    left: 32vw;
    padding: 22px;
    border-radius: 22px;
    box-shadow: 1vw 2vw 3vw 1vw black;
}

#initial{
    display: flex;
    justify-content: center;
}

.butto {
    padding: 0.8rem 0.9rem;
    font-size: 1vw;
    border-radius: 32px;
    width: 12vw;
    margin-top: 3vw;
    cursor: pointer;
    margin-bottom: 1vw;
    font-family: 'Playfair Display', serif;
}

#Login{
    z-index: 2;
    background-color: #414B4F;
}

#Register{
    position: relative;
    right: 3vw;
    z-index: 1;
}

#icons{
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
}

#icons i{
    margin: 5px 28px;
    padding: 4px;
    border-radius: 20px;
    color: #414B4F;
}

#icons i:hover{
    transform: rotate(360deg);
    transition: 1s;
}

#fourm2{
    display: none;
}

#fourm form{
    display: flex;
    flex-direction: column;
}

.inpu{
    width: 29vw;
    padding: 5px;
    margin-top: 18px;
    margin-left: 24px;
    margin-bottom: 4px;
    border-left: none;
    border-top: none;
    border-right: none;
}

#submit{
    margin-left: 10vw;
    background-color:  #414B4F;
    color: white;
}

#submit:hover{
    background-color:  #363d3f;   
}
</style>
<body>
    
    

    <div id="container">
        <div id="background"></div>
        
        <div id="loginblock">


            
               

            <div id="initial">
                <button id="Login" class="butto">Log In</button>
                <button id="Register" class="butto">Register</button>
            </div>

            <div id="icons">
                <a href=""><i class="fa-brands fa-google"></i></a>
                <a href=""><i class="fa-brands fa-facebook-f"></i></a>
                <a href=""><i class="fa-brands fa-twitter"></i></a>
            </div>

            <div id="fourm">
                <form action="/student/" method="post">
                    <input type="text" name="User_Id" id="User_Id" class="inpu" placeholder="User_Id" required>
                    <input type="password" name="Password" id="Password" class="inpu" placeholder="Enter Your Password" required>
                    <button id="submit" class="butto">Log In</button>
                </form>
            </div>

            <div id="fourm2">
                <form action="studentRegistration"method='post'>
                    <input type="text" name="studentId" id="studentId" class="inpu" placeholder="studentId" required>
                    <input type="text" name="studentName" id="studentName" class="inpu" placeholder="studentName" required>
                    <input type="text" name="courseName" id="courseName" class="inpu" placeholder="courseName" required>
                    <input type="text" name="phoneNumber" id="phoneNumber" class="inpu" placeholder="phoneNumber" required>
                    <input type="text" name="DOB" id="DOB" class="inpu" placeholder="DOB (YYYY-MM-DD)" required>
                    <input type="text" name="gender" id="gender" class="inpu" placeholder="gender" required>
                    <input type="email" name="Email_Id" id="Email_Id" class="inpu" placeholder="Enter Email_Id" required>
                    <input type="password" name="Password" id="Password" class="inpu" placeholder="Set Your Password" required>
                    <button id="submit" class="butto">Registration</button>
                </form>
            </div>

        </div>

    </div>
    <script src="https://kit.fontawesome.com/24c1065ad6.js" crossorigin="anonymous"></script>
    <script>

        let but1=document.getElementById('Login');
        let but2=document.getElementById('Register');
        let but3=document.getElementById('submit');
        let form1=document.getElementById('fourm');
        let form2=document.getElementById('fourm2');

        let flag1=1;
        let flag2=0;
        //  1 for open
        //  0 for notopen

        but1.addEventListener('click',()=>{
            if(flag1==0){
                flag1=1;
                flag2=0;

                but1.style.backgroundColor=`#414B4F`;
                but1.style.zIndex=`2`;

                but2.style.backgroundColor=`white`;
                but2.style.zIndex=`1`;

                but3.innerHTML=`Log In`;

                form2.style.display=`none`;
                form1.style.display=`block`;
            }
        });

        but2.addEventListener('click',()=>{
            if(flag2==0){
                flag2=1;
                flag1=0;

                but2.style.backgroundColor=`#414B4F`;
                but2.style.zIndex=`2`;

                but1.style.backgroundColor=`white`;
                but1.style.zIndex=`1`;

                but3.innerHTML=`Register`;

                form1.style.display=`none`;
                form2.style.display=`block`;
            }
        });
    </script>
</body>
</html>